<Window x:Class="SVM1.MainWindow2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:t="clr-namespace:test"
        Title="Real Time IoT using 3D Camera"
        Icon="SAP-Logo.png"
        Left="1"
        Top="1" Closing="Window_Closing_1"  Height="1920" Width="1080"   WindowStyle="None" ResizeMode="NoResize"  
    WindowStartupLocation="CenterScreen" >
    <Window.Background>
        <ImageBrush ImageSource="vm_background.jpg"/>
    </Window.Background>
    <Grid>

        <StackPanel Orientation="vertical">
            <Button Content="Logout" Name="btnLogOut"  Width="63" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Height="32" Click="btnLogOut_Click"/>
            <StackPanel  Orientation="vertical" Margin="200,80">
                <Label Content="Welcome"     FontSize="55" FontFamily="Segoe UI Black" Foreground="#FFF9F9FF" HorizontalContentAlignment="Center" HorizontalAlignment="Center" />
                <Label x:Name="lblName" Content="Shailesh"   FontSize="55" FontFamily="Segoe UI Black" Foreground="#FFF9F9FF" HorizontalContentAlignment="Center" HorizontalAlignment="Center" />
            </StackPanel>
            <t:ElementFlowExample x:Name="indexchange" Height="898" Margin="-314,0,-315,0"/>
        </StackPanel>
    </Grid>
</Window>
